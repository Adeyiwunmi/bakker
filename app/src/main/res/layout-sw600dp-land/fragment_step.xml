<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/four"
    tools:context="com.jp.bakingapp.fragments.StepFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:id="@+id/idVideo_view">

    </com.google.android.exoplayer2.ui.SimpleExoPlayerView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:id="@+id/idImageStepFrag"
        android:layout_centerInParent="true"
        android:visibility="gone"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idTextViewStepDesc"
        android:layout_below="@+id/idVideo_view"
        android:paddingTop="@dimen/seven_dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/black"
        android:text="@string/step_sample_desc"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/four"
        android:orientation="horizontal"
        android:layout_below="@+id/idTextViewStepDesc">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/idButtonPrevStep"
            android:text="@string/prevButton"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nextButton"
            android:layout_weight="1"
            android:id="@+id/idButtonNextStep"
            android:layout_alignParentRight="true"
            />

    </LinearLayout>
</RelativeLayout>
